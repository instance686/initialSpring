<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
        
<bean id="triangle" class="com.spring.tut.SpringTutorial.Triangle" autowire="byName">
</bean>

<bean id="pointA" class="com.spring.tut.SpringTutorial.Point">
		<property name="x" value="${pointA.pointX}"/>
		<property name="y" value="${pointA.pointY}"/>
</bean>
<bean id="pointB" class="com.spring.tut.SpringTutorial.Point">
			<property name="x" value="-20"/>
			<property name="y" value="0"/>
</bean>
<bean id="pointC" class="com.spring.tut.SpringTutorial.Point">
			<property name="x" value="0"/>
			<property name="y" value="20"/>
</bean>
<alias name="triangle" alias="triangle-alias"/>

<bean class="com.spring.tut.SpringTutorial.DisplayNameBeanPostProcessor"/>   
<bean class="com.spring.tut.SpringTutorial.MyBeanFactory"/>   

<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" >
	<property name="location" value="pointconfig.properties"/>
</bean>    

<bean id="circle" class="com.spring.tut.SpringTutorial.Circle" >
	<property name="point" ref="pointA"/>
</bean>

<bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor	"/>
    
</beans>